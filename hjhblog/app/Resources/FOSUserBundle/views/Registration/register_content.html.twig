<div class="tab-pane" id="register">

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-signin'}}) }}
    {# {{ form_widget(form) }} #}
    {{ form_row(form.username, {'label':' ','attr':{'class': 'form-control','type':'texte','placeholder':'User Name'}}) }}
    {{ form_row(form.email, {'label':' ','attr':{'class': 'form-control','type':'email','placeholder':'Email Adress ...'}}) }}
    {{ form_row(form.plainPassword.first, {'label':' ','attr':{'class': 'form-control','type':'email','placeholder':'Password'}}) }}
    {{ form_row(form.plainPassword.second, {'label':' ','attr':{'class': 'form-control','type':'email','placeholder':'Repeat Password'}}) }}
    <br/>
    <div>
        <input type="submit" class="btn btn-lg btn-default btn-block" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}

