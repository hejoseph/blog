{% trans_default_domain 'FOSUserBundle' %}
<div class="tab-pane" id="select">
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-signin">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
        {% endif %}
        {# <label for="username">{{ 'resetting.request.username'|trans }}</label> #}
        <input required autofocus class="form-control" type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}" />
    </div>
    <br/>
    <div>
        <input type="submit" class="btn btn-lg btn-default btn-block" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>
<div id="tabs" data-tabs="tabs">
<p class="text-center"><a href="#login" data-toggle="tab">Back to login</a></p>
</div>
</div>
