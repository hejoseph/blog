                            {% for blog in blogs %}
                                <tr>   
                                    <td><input type="checkbox" class="blog_blog" name="blog_id[]" value="{{blog.id}}"></td>
                                    <td>{{blog.id}}</td>
                                    <td>{{blog.title}}</td>
                                    <td>{{blog.category.name}}</td>
                                    <td>{{blog.blogger.surname}} {{blog.blogger.firstname}}</td>
                                </tr>
                            {% else %}
                                <p>No Blogs ...</p>
                            {% endfor %}

                        </tbody>
                    </table>
                    <hr>
                </div>
            </div>

            </div> 
            <div class="panel-footer clearfix">
                <div class="pull-right">
                    <input type="submit" id="edit_blog" name="action" class="btn btn-primary hide" value="Edit"></input>
                    <input type="submit" id="remove_blog" name="action" class="btn btn-danger hide" value="Remove"></input>
                </div>
            </div>
        </div>
    </form>
    </div>

    <div class="row">
        <form action="{{path('BlogBundle_blog_admin_dashOperations')}}" method="get">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <h3 class="panel-title text-center">DASHBOARD COMMENT</h3>
                    
                </div>
            </div>
            <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table" id="table">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="main_checkbox_comment" ></th>
                                <th>COMMENT ID</th>
                                <th>COMMENT</th>
                                <th>BLOG ID</th>
                                <th>BLOG TITLE</th>
                                <th>BLOGER ID</th>
                                <th>BLOGER NAME</th>
                                <th>Anonymous name</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for comment in comments %}
                                <tr>   
                                    <td><input type="checkbox" class="comment_comment" name="comment_id[]" value="{{comment.id}}"></td>
                                    <td>{{comment.id}}</td>
                                    <td>{{comment.comment}}</td>
                                    <td>{{comment.blog.id}}</td>
                                    <td>{{comment.blog.title}}</td>
                                    <td>
                                        {% if not comment.blogger is empty %}
                                            {{comment.blogger.id}}
                                        {% else %}
                                            NULL
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if not comment.blogger is empty %}
                                            {{comment.blogger.firstname}} {{comment.blogger.surname}}
                                        {% else %}
                                            NULL
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if not comment.blogger is empty %}
                                            NULL
                                        {% else %}
                                            {{comment.user}}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <p>No Blogs ...</p>
                            {% endfor %}

                        </tbody>
                    </table>
                    <hr>
                </div>
            </div>

            </div> 
            <div class="panel-footer clearfix">
                <div class="pull-right">
                    {# <input type="submit" id="edit_comment" name="action" class="btn btn-primary hide" value="Edit"></input> #}
                    <input type="submit" id="remove_comment" name="action" class="btn btn-danger hide" value="Remove"></input>
                </div>
            </div>
        </div>
    </form>
    </div>

    
{% endblock %}