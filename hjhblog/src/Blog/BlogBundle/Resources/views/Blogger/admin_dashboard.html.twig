{% block body %}
    <div class="row">
        <form action="{{path('BlogBundle_blog_admin_dashOperations')}}" method="get">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="row">
                    <h3 class="panel-title text-center">DASHBOARD BLOGGER</h3>
                    
                </div>
            </div>
            <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table" id="table">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="main_checkbox_blogger" ></th>
                                <th>ID</th>
                                <th>SURNAME</th>
                                <th>FIRSTNAME</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for blogger in bloggers %}
                                <tr>   
                                    {% if blogger.role == "admin" %}
                                    <td><input disabled type="checkbox" class="admin_admin" name="blogger_id[]" value="{{blogger.id}}"></td>
                                    {% else %}
                                        <td><input type="checkbox" class="blogger_blogger" name="blogger_id[]" value="{{blogger.id}}"></td>
                                    {% endif %}
                                    <td>{{blogger.id}}</td>
                                    <td>{{blogger.surname}}</td>
                                    <td>{{blogger.firstname}}</td>
                                </tr>
                            {% else %}
                                <p>No Bloggers ...</p>
                            {% endfor %}

                        </tbody>
                    </table>
                    <hr>
                </div>
            </div>

            </div> 
            <div class="panel-footer clearfix">
                <div class="pull-right">
                    <input type="submit" id="edit_blogger" name="action" class="btn btn-primary hide" value="Edit"></input>
                    <input type="submit" id="remove_blogger" name="action" class="btn btn-danger hide" value="Remove"></input>
                </div>
            </div>
        </div>
    </form>
