    <div class="row">
        <form action="{{path('BlogBundle_blog_admin_dashOperations')}}" method="get">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <h3 class="panel-title text-center">DASHBOARD BLOG</h3>
                    
                </div>
            </div>
            <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table" id="table">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="main_checkbox_blog" ></th>
                                <th>ID</th>
                                <th>BLOG TITTLE</th>
                                <th>CATEGORY</th>
                                <th>BLOGGER NAME</th>
                            </tr>
                        </thead>
