{% extends 'BlogBundle:Blogger:show_blogger_blogs.html.twig' %}
{% block blogger_body %}
  <div class="row">
    <table class="table table-user-information">
      <tbody>
        <tr>
          <td>Surname:</td>
          <td>{{blogger.surname}}</td>
        </tr>
        <tr>
          <td>Firstname:</td>
          <td>{{blogger.firstname}}</td>
        </tr>
        <tr>
          <td>Date of Birth</td>
          <td>{{blogger.dateOfBirth}}</td>
        </tr>
        <tr>
          <td>Country</td>
          <td>{{blogger.country}}</td>
        </tr>
        <tr>
          <td>Gender</td>
          <td>{{blogger.gender}}</td>
        </tr>
        <tr>
          <td>Home Address</td>
          <td>{{blogger.address}}</td>
        </tr>
        <tr>
          <td>Zip Code</td>
          <td>{{blogger.zipcode}}</td>
        </tr>
        <tr>
          <td>Email</td>
          <td><a href="mailto:info@support.com">{{blogger.email}}</a></td>
        </tr>
      </tbody>
    </table>
    

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{path('BlogBundle_blogger_profile_edit',{'blogger_id':blogger.id})}}" class="btn btn-primary">Edit profile</a>
            <a href="#" class="btn btn-danger">Ban</a>
        {% else %}
          {% if app.user.id == blogger.id %}
            <a href="{{path('BlogBundle_blogger_profile_edit',{'blogger_id':blogger.id})}}" class="btn btn-primary">Edit profile</a>
          {% endif %}
        {% endif %}
    {% endif %}

    
  </div>
{% endblock %}