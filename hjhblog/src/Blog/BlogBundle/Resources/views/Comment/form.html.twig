<form action="{{ path('BlogBundle_comment_create', { 'blog_id' : comment.blog.id } ) }}" method="post" {{ form_enctype(form) }} class="blogger">
    {% if not app.user %}
        {{ form_row(form.user, {'label':'User','attr':{'class': 'form-control','type':'texte','placeholder':'Your name ...'}}) }}
    {% else %}
        <div class="hide">
        {{ form_row(form.user, {'label':'User','attr':{'class': 'form-control','type':'texte','placeholder':'Your name ...','value':app.user.firstname~" "~app.user.surname}}) }}
        </div>
    {% endif %}
    {{ form_row(form.comment, {'label':'Comment','attr':{'class': 'form-control','type':'texte','placeholder':'Your comment ...'}}) }}
    {{ form_widget(form._token) }}
    <p>
        <input type="submit" value="Submit">
    </p>
</form>