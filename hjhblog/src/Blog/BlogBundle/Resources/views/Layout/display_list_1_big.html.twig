<div class="row">
  {% for blog in blogs %}
    <div class="row">
      {% if not blog.picture is empty %}
        {% if not blog.picture.path is empty%}
      <div class="col-sm-4 ">
          <img src="{{ asset(blog.picture.AssetPath) }}" alt="{{blog.picture.name}}" class="img-responsive ">
          
      </div>
      <div class="col-sm-8">
        {% else %}
          <div class="col-sm-12">
        {% endif %}
      {% else %}
        <div class="col-sm-12">
      {% endif %}
        <h3 class="title"><a href="{{ path("BlogBundle_blog_show", {"id": blog.id})}}"> {{blog.title}}...
          </a>
        </h3>
        <p class="text-muted">
          
          <a href="{{ path('BlogBundle_blogger_blogs', {'blogger_id' : blog.blogger.id})}} "> <span class="glyphicon glyphicon-user"> {{blog.blogger.firstname}} {{blog.blogger.surname}}
          </a> </span> <span class="glyphicon glyphicon-fire">   </span> {{blog.popularity}} <span class="glyphicon glyphicon-comment">   </span> {{ blog.comments|length }}
          <span class="glyphicon glyphicon-time pull-right"> {{blog.created|date('l, F j, Y H:i:s')}}</span>
          
        </p>
        <br>
        <p>{{ blog.content(200) }}
        </p>
      </div>
    </div>
    {% if loop.last %}
    {% else %}
      <hr class="style-seven"/>
    {% endif %}
  {% else %}
    No Blogs
  {% endfor %}
</div>